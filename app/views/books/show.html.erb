<script src="https://kit.fontawesome.com/930da8373e.js" crossorigin="anonymous"></script>
    <p id="notice">
       <%= flash[:notice] %>
    </p>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
        <%= render 'books/list', user: @user, book: @booknew %>

        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@user.id) do %>
                  <%= attachment_image_tag @user, :profile_image, size: "60x60", fallback: "no_image.jpg"%>
                  <br>
                  <%= @user.name %>
                  <% end %>
                  </br>
                </td>

                <td>
                  <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                  <% end %>
                </td>
                <td><%= @book.body %></td>
                  <td class ="comments-count">コメント数：<%= @book.book_comments.count %></td>
                   <%= render 'favorites/favorite', book: @book %>
                   
                  <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path, class: 'btn btn-sm btn-success' %>
                  </tr>
                  <% end %>
                </td>
                <td>
                  <% if @book.user == current_user %>
                    <%= link_to "Destroy", book_path(@book), method: :delete, class: 'btn btn-sm btn-danger' %>
                  <% end %>
                </td>
                
         </tr>
        </table>
       <h3>Comments</h3>
        <table class='table'>
        <%= render "book_comments/comment_index" , book: @book %>
      </table>
     <p><%= render "book_comments/comment_form" , book: @book, book_comment: @book_comment %></p>
        </div>
      </div>
    </div>
</main>